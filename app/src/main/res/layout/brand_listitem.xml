<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@id/txt_section"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="3.0dip"
        android:textColor="#ffd3d3d3"
        android:textSize="16.0sp" />

    <LinearLayout
        android:id="@id/list_divider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/new_vancl_home_list_divider1" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/new_vancl_home_list_divider2" />
    </LinearLayout>

    <TextView
        android:id="@id/txt_brandname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@anim/list_selector_myvancl"
        android:padding="10.0dip"
        android:textColor="#ffd3d3d3"
        android:textSize="16.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2.0dip"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/new_vancl_home_list_divider1" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/new_vancl_home_list_divider2" />
    </LinearLayout>
</LinearLayout>